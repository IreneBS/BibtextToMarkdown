   keywords = {electromagnetic induction,plant phenotyping,soil compaction,soil heterogeneity,unmanned aerial vehicle},
   month = {10},
   pages = {1749-1760},
   publisher = {John Wiley & Sons, Ltd},
   title = {Detecting spatial variability of soil compaction using soil apparent electrical conductivity and maize traits},
   volume = {38},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/sum.12812 https://onlinelibrary.wiley.com/doi/abs/10.1111/sum.12812 https://bsssjournals.onlinelibrary.wiley.com/doi/10.1111/sum.12812},
   year = {2022}
